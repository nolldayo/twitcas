div.cruise
	div.header
		p Twicas Cruise
		p Logout
	div.video
		h1 {{live.title}}
		p  {{live.subtitle}}
		div.video_panel
			video(ng-src="{{live.url}}" autoplay="true" controls="true" poster="/img/screen-offline-320-flash-ja.jpg")
			div.comments
				h1 Comments
			div.comment_panel
				div.comment(ng-repeat="comment in comments")
					img(ng-src="{{comment.from_user.image}}")
					p {{comment.message}}
			div.buttons
				p(ng-click="nextCast()") NEXT
				p(ng-click="pause()") PAUSE
	div.comment_input
		textarea(ng-model="newComment")
		p(ng-click="postComment") SEND
	div.bottom
		img(ng_src="{{live.image}}")
		h1 {{live.name}}
		p @{{live.screen_id}}