div.top(ng-show="dark")
	div.header
		div.title
			h1 Twicas Cruise
			p ランダムでキャスを旋回できるサービス
		div.button(ng-click="login()")
			p START CRUISE
	div.main
		div.card(ng-repeat="card in cards")
			img(src="{{card.thumbnail}}")
			div.caps
				h2 {{card.title}}　
				p {{card.subtitle}}　
				p {{card.name}}　

div(ng-show="light")
	.head
		.title
			h1 Twitcas Cruise
			p ランダムでキャスを旋回できるサービス
			.btn(ng-click="login()")
				p Start Cruise
	.main
		.panel
			.image
			.text
				h2 うんこのキャス
				p user name

